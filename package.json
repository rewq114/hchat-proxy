{
  "name": "hchat-proxy",
  "version": "1.1.7",
  "description": "Desktop proxy for HChat OpenAI-compatible API",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "start:server": "node dist/server.js",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "powershell -Command \"New-Item -ItemType Directory -Path dist -Force; Copy-Item src/index.html dist/index.html -Force; Copy-Item src/renderer.js dist/renderer.js -Force\"",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "@types/winston": "^2.4.4",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.hchat.desktop",
    "productName": "HChat Proxy",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "dir"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rewq114",
        "repo": "hchat-proxy"
      }
    ]
  }
}
